<article class="related-post-card bg-white/10 backdrop-blur-sm rounded-2xl overflow-hidden group w-full max-w-sm">
    <a href="{{url}}" class="block">
        {{#if feature_image}}
            <figure class="h-48 overflow-hidden">
                <img class="w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105" src="{{feature_image}}" alt="{{title}}">
            </figure>
        {{/if}}
        <div class="p-6 bg-white/80 backdrop-blur-sm">
            <h3 class="text-xl font-bold mb-2 text-gray-900">{{title}}</h3>
            <p class="text-gray-700 text-sm leading-relaxed">{{excerpt words="15"}}</p>
        </div>
    </a>
</article>
